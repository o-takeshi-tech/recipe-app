<%= form_with model: @ingredient, class: 'registration-main', local: true do |f| %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        食材登録
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>  

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">食材名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :ingredient_name, class:"input-default", id:"ingredient_name", placeholder:"食材名を入力してください", maxlength:"40" %>
    </div>

    <div class="form-group">
    </div>

    <div class='register-btn'>
      <%= f.submit "レシピ登録" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>