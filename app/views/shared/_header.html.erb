<div class="header">
  <div class="header-left">
    <div class="app-name">
      <%= link_to "RecipeRator", root_path , id:"recipe-rator" %>
    </div>
    <div class="user-name">
      <% if user_signed_in? %>
        <p>ようこそ</p> 
      <% end %>
    </div>
  </div>
  
  <div class="search-form">
    <%= form_with(url: search_recipes_path, local: true, method: :get, class: "form") do |form| %>
        <%= form.text_field :keyword, placeholder: "料理名・食材名", class: "search" %>
      <%= form.submit "レシピ検索", class: "submit" %>
    <% end %>
    <%# 後に実装 %>
    <%# <div id="search-result"></div> %>
  </div>
  
  <div class="header-right">
    <div class="user">
      <% if user_signed_in? %>
        <div class="buttons">
          <%= link_to "ログアウト", destroy_user_session_path , method: :delete, class:"button logout-button" %>
          <%= link_to "ユーザー編集", edit_user_registration_path , class:"button logout-button" %>
          <%= link_to "レシピ登録", new_recipe_path , class:"button recipe-button" %>
        </div>
      <% else %>
        <div class="buttons">
          <%= link_to "ログイン", new_user_session_path, class:"button login-button" %>
          <%= link_to "ユーザー新規登録",new_user_registration_path, class:"button signup-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
