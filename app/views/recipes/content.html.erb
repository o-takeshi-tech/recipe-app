<%= render "shared/header"%>

<%= form_with model: @recipe, url:recipes_path, method: :post , class: 'registration-main new', local: true do |f| %>

<div class='form-wrap new'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      <%= @recipe.name %>
      <%= f.text_area :name, class:"input-default hide", id:"name", placeholder:"食材名を入力してください", maxlength:"40" %>
    </h1>
  </div>

  <%= render 'shared/error_messages', model: @recipe %>  

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">イメージ</label>
       <span class="indispensable">必須</span>
    </div>
     <label class="form-image">
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div> 

  <div class="form-group"> 
      <div class='form-text-wrap'>
        <label class="form-text">食材名</label>
        <span class="indispensable">必須</span>
      </div>
     <input type="text" name="recipe_form[ingredient_names][]", placeholder="食材名", class="input-default input", id="ingredient_name">
   


    <%# 追加・削除をするためのフォームをJSで扱えるようにする %>
    <%= javascript_tag  do %>
      const ingredient =  
      `<input type="text" name="recipe_form[ingredient_names][]", placeholder="食材名", class="input-default input", id="ingredient_name">`
    <% end %>

    <button type="button" id="button_plus">食材項目を追加</button>
    <button type="button" id="button_delete">食材項目を削除</button>
  </div>



  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">レシピ説明</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :description, class:"input-recipe", id:"password", placeholder:"レシピ説明" ,rows: "10"%>
  </div>

  <div class="form-group">
  </div>

  <div class='register-btn'>
    <%= f.submit "レシピ登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>


<%= render "shared/footer"%>